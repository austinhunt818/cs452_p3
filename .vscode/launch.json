{
    "configurations": [
        {
            "name": "Debug Test-Lab",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/test-lab",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb", // Adjust this path if GDB is located elsewhere
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}